<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:padding="16dp"
    android:orientation="horizontal"
    android:background="@color/FlexColor"
    android:elevation="4dp"
    android:minHeight="160dp"
    android:gravity="center_vertical"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/trainerImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        android:contentDescription="Trainer Image"
        android:background="@android:color/white"
        android:padding="4dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/trainerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trainer Name"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/trainerDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trainer description here..."
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            android:maxLines="6"
            android:ellipsize="end" />
    </LinearLayout>
</LinearLayout>
