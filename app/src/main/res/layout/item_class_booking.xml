<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">
    <LinearLayout android:layout_weight="2"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/imageViewClass"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:src="@drawable/ic_launcher_background" />

        <TextView
        android:id="@+id/textViewClassName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
            android:textColor="@color/black"
            android:layout_weight="1"
        android:text="Class Name"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textViewInstructor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Instructor"
        android:textColor="@color/black"

        android:layout_weight="1"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Time"
        android:textColor="@color/black"

        android:layout_weight="1"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/textViewBookings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Bookings"
        android:layout_weight="1"
        android:textColor="@color/black"

        android:textSize="14sp"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">


        <Button
            android:id="@+id/buttonCancelBooking"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@color/FlexColor"
            android:text="Cancel Booking" />

        <Button
            android:id="@+id/buttonJoinClass"
            android:layout_width="0dp"
            android:textColor="@color/white"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/FlexColor"
            android:text="Join Class" />
    </LinearLayout>
</LinearLayout>
